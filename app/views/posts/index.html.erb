<h1> Biophilia Fit </h1>
<%= link_to "New Post", new_post_path %>

<div class = "posts-wrapper row">
	<% @posts.each do |post| %>
		<div class = "post">
			<div class = "name">
				<h1> Cody Mckeon </h1>
			</div>
			<div class = "image center-block">
				<%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
				<p><%= post.caption %></p>
			</div>
		</div>
	<% end %>
</div>
		
			
		

